{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% block title %}
	{{ parent() }} | Media Admin
{% endblock %}

{% block sidebar %}
	<div class="alert alert-info hint">
		<span class="label label-info">{{ 'default.label.info'|trans }}</span><br/>
  		{{ 'media.info'|trans({}, 'media')|raw }}
	</div>
{% endblock %}
 
{% block content %}
	<div class="page-header">
		<h2>{{ 'media.list.title'|trans({}, 'media') }}</h2>
	</div>
	
	{% include 'ArnmAraneumBundle:Misc:messages.html.twig' %}
	
	<table class="table table-striped table-bordered table-condensed media-content">
	    <thead>
	        <tr>
	            <th>#</th>
	            <th>{{ 'media.list.table.head.name'|trans({}, 'media') }}</th>
	            <th>{{ 'media.list.table.head.tag'|trans({}, 'media') }}</th>
	            <th>{{ 'media.list.table.head.preview'|trans({}, 'media') }}</th>
	            <th>{{ 'media.list.table.head.img_links'|trans({}, 'media') }}</th>
	            <th>{{ 'default.label.actions'|trans }}</th>
	        </tr>
	    </thead>
	    <tbody>
	    {% for entity in entities %}
	        <tr>
	            <td>{{ entity.id }}</td>
	            <td>{{ entity.name }}</td>
	            <td>{{ entity.tag }}</td>
	            <td>
	            	<img src="{{ entity.getWebPath | imagine_filter('araneum_preview') }}" />
	            </td>
	            <td>
	            	<br/>
        			<a target="_blank" href="{{ entity.getWebPath | imagine_filter('araneum_preview') }}">araneum_preview</a><br/>
        			<a target="_blank" href="{{ entity.getWebPath | imagine_filter('rotator') }}">rotator</a><br/>
        			<a target="_blank" href="{{ entity.getWebPath | imagine_filter('filmstrip') }}">filmstrip</a><br/>
        			<a target="_blank" href="{{ entity.getWebPath | imagine_filter('showcase_thumb') }}">showcase_thumb</a><br/>
        			<a target="_blank" href="{{ entity.getWebPath | imagine_filter('artist_image') }}">artist_image</a>
        			<br/>
	            </td>
	            <td>
	            	<a href="{{ path('arnm_media_delete', { 'id': entity.id }) }}" class="btn btn-danger delete-confirm">{{ 'default.label.delete'|trans }}</a>
	            </td>
	        </tr>
	    {% endfor %}
	    </tbody>
	</table>
	
	<div class="well">
	    <a href="{{ path('arnm_media_new') }}" class="btn btn-primary">
	        {{ 'media.list.action.create_new'|trans({}, 'media') }}
	    </a>
    </div>
{% endblock %}
